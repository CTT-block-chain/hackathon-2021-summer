{
  "compilerOptions": {
    "jsx": "react",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "target": "es2017",
    "module": "commonjs",
    "baseUrl": ".",
    "paths": {
      "@model/*": ["src/model/*"],
      "@store": ["src/store/index.ts"],
      "@store/*": ["src/store/*"],
      "@component/*": ["src/component/*"],
      "@route": ["src/route/index.ts"],
      "@route/*": ["src/route/*"],
      "@scene/*": ["src/scene/*"],
      "@util/*": ["src/util/*"]
    }
  },
  "include": ["src/**/*", "storybook/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
